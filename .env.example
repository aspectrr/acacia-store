# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/acacia_store
DB_HOST=localhost
DB_PORT=5432
DB_NAME=acacia_store
DB_USER=username
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=50000000
UPLOAD_DIR=./uploads
EXTENSIONS_DIR=./extensions

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Extension Registry Configuration
REGISTRY_NAME=Acacia Extension Store
REGISTRY_DESCRIPTION=A marketplace for serverless function and React component extensions
REGISTRY_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# Extension Execution
EXTENSION_TIMEOUT=30000
MAX_EXTENSION_SIZE=10000000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check
HEALTH_CHECK_PATH=/health

# API Configuration
API_VERSION=v1
API_PREFIX=/api
