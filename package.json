{
  "name": "acacia-store",
  "version": "1.0.0",
  "description": "Extension marketplace server for hosting and managing serverless function + React component extensions",
  "module": "index.ts",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "bun run src/scripts/migrate.ts",
    "db:seed": "bun run src/scripts/seed.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.6",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "postgres": "^3.4.7",
    "semver": "^7.7.2",
    "sharp": "^0.34.3",
    "tar": "^7.4.3",
    "uuid": "^12.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "@types/tar": "^6.1.13",
    "@types/semver": "^7.7.1",
    "@types/cors": "^2.8.19",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "keywords": [
    "extension",
    "marketplace",
    "serverless",
    "react",
    "drizzle",
    "api"
  ],
  "author": "",
  "license": "MIT"
}
